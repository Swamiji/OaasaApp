<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.oaasa.oaasatechnologys.MainActivity"
    >
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar"
            android:id="@+id/include" />

        <ImageView
            android:id="@+id/service_img"
            android:layout_width="330dp"
            android:layout_height="200dp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/include"
            android:layout_marginTop="21dp"
            android:text="SERVICES"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/service_img"
            >
            <TextView
                android:id="@+id/date_Posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/service_img"
                android:text="Post Date:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#f63d36"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/date_Posted"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/date_Posted"
                android:layout_toRightOf="@+id/date_Posted"
                android:text="12/11/2017"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/LinearLayout2"
            android:layout_below="@+id/linearLayout1"
            >
            <TextView
                android:id="@+id/short_descrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date_Posted"
                android:layout_marginTop="13dp"
                android:text="Short Description:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#f3d"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/text_short_descrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Short Description"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/LinearLayout2"
            >
            <TextView
                android:id="@+id/Long_Descrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/short_descrip"
                android:layout_marginTop="12dp"
                android:text="Long Description:"
                android:textColor="#df28"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/text_long_descrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Long_Descrip"
                android:layout_alignLeft="@+id/text_short_descrip"
                android:layout_alignStart="@+id/text_short_descrip"
                android:text="Text Long Description"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </RelativeLayout>


</ScrollView>
