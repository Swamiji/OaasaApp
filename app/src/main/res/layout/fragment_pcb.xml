<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oaasa.oaasatechnologys.PCB">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pcb_img"
                android:layout_width="345dp"
                android:layout_height="200dp"
                android:layout_below="@id/linearLayout1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative1"
                android:layout_below="@id/pcb_img"
                >
                <TextView
                    android:id="@+id/title_pcb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="21dp"
                    android:text=" "
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative1"
                android:layout_marginTop="15dp"
                >

                <ImageView
                    android:id="@+id/pcb_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/pcb_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/pcb_logo"
                    android:layout_marginLeft="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/pcb_logo"
                    android:layout_toRightOf="@+id/pcb_logo"
                    android:text="server_Active"
                    android:textColor="@color/grayDarken"
                    android:textSize="17dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayDarken"
                    android:textStyle="bold"
                    android:text="robotics_Active"
                    android:textSize="17dp"
                    android:id="@+id/pcb_active1"
                    android:layout_below="@id/pcb_logo"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative3"
                android:layout_below="@id/relative2"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pcb_Active2"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pcb_Active3"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/pcb_Active2"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative4"
                android:layout_below="@+id/relative3"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Fabrication :"
                android:id="@+id/title_fabricaion"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="@color/grayDarken"
                    android:text="Fabrication"
                    android:id="@+id/description_fabricaion"
                    android:layout_below="@id/title_fabricaion"

                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative5"
                android:layout_below="@+id/relative4"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Design :"
                    android:id="@+id/title_design"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="@color/grayDarken"
                    android:text="Fabrication"
                    android:id="@+id/description_design"
                    android:layout_below="@id/title_design"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative6"
                android:layout_below="@+id/relative5"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Pcb Assembly Service :"
                    android:id="@+id/title_assembly"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="@color/grayDarken"
                    android:text="Fabrication"
                    android:id="@+id/description_assembly"
                    android:layout_below="@id/title_assembly"
                    />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/relative6"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                />
        </RelativeLayout>
    </ScrollView>


</FrameLayout>
