<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oaasa.oaasatechnologys.sox_compliance">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/SOX_img"
        android:layout_width="345dp"
        android:layout_height="200dp"
        android:layout_below="@id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative1"
        android:layout_below="@id/SOX_img"
        >
        <TextView
            android:id="@+id/title_SOX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="21dp"
            android:text=" "
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative1"
        android:layout_marginTop="15dp"
        >

        <ImageView
            android:id="@+id/SOX_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/SOX_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/SOX_logo"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/SOX_logo"
            android:layout_toRightOf="@+id/SOX_logo"
            android:text="Sox_Active"
            android:textColor="@color/grayDarken"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayDarken"
            android:textStyle="bold"
            android:text="Sox_Active"
            android:textSize="15dp"
            android:id="@+id/SOX_active1"
            android:layout_below="@id/SOX_logo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative3"
            android:layout_below="@id/relative2"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Sox_Active2"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Sox_Active3"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_below="@id/Sox_Active2"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/relative3"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            />
    </RelativeLayout>

    </ScrollView>
</FrameLayout>
